.uploaded {
    padding: 0;
    height: 14px;
    border-radius: 10px;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#66cc00), to(#4b9500));
    border-image: initial;
}
.dropbox {
 
/*     width: 28.4em;
    height: 7em; */
  /*   background-image: url('../images/dropboxBg.jpg'); */
    border: 6px solid rgba(6, 5, 5, 0.80);
    border-color: rgba(10, 10, 10, 0.08);
    border-radius: 3px;
    border-style: dashed;
    background-color:#C8DBE2; 
    text-align: center;
    color: #110707;
  /*   font-size: 2em; */
    font-family: Arial, sans-serif;
}
.dropbox span {
    margin-top: 0.9em;
    display: block;
}
.dropbox.not-available {
    background-color: #F88;
}
.dropbox.over {
    background-color: #bfb;
}
div.upload {

    display: inline-block;
 
    display: none;
    
    overflow: hidden;
}
.custom-file-upload {
    
    display: inline-block;
    color: #010168;
  
    cursor: pointer;
}
.custom-file-upload:hover{


    -webkit-transform: scale(1.2);


}


