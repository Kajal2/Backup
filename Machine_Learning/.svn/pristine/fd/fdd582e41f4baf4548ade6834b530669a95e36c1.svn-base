   }








.button {
    border-radius: 40px;
    background-color: #8FAFE6;
    border: none;
    color: #FFFFFF;
    text-align: center;
    font-size: 18px;
    padding: 4px;
    width: 150px;
    transition: all 0.5s;
    cursor: pointer;
    margin: 5px;
  }
  

  
  .button span:after {
    content: '\00bb';
    position: absolute;
    opacity: 0;
    top: 0;
    right: -20px;
    transition: 0.5s;
  }
  
  .button:hover{
    padding-left: 25px;
  }
  
  .button:hover:after {
    opacity: 1;
    left: 0;
  }


.next:hover {
    background-color: #ddd;
    color: black;
}




